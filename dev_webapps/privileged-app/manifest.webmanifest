{
  "version": "0.2.0",
  "name": "Privileged App",
  "short_name": "privileged-app",
  "description": "Demonstrates how to use permissions to load remote content",
  "start_url": "/index.html",
  "icons": [
    {
      "src": "/img/icons/icon16x16.png",
      "type": "image/png",
      "sizes": "16x16"
    },
    {
      "src": "/img/icons/icon48x48.png",
      "type": "image/png",
      "sizes": "48x48"
    },
    {
      "src": "/img/icons/icon60x60.png",
      "type": "image/png",
      "sizes": "60x60"
    },
    {
      "src": "/img/icons/icon128x128.png",
      "type": "image/png",
      "sizes": "128x128"
    }
  ],
  "b2g_features": {
    "core": false,
    "developer": {
      "name": "Your name",
      "url": "http://example.com"
    },
    "permissions": {
      "systemXHR": {
        "description": "Required to load remote content"
      }
    }
  }
}
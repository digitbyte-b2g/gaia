{
  "version": "1.1",
  "name": "Device Storage Test",
  "short_name": "ds-test",
  "description": "Test app for Device Storage",
  "start_url": "/index.html",
  "icons": [
    {
      "src": "/style/icons/default_84.png",
      "type": "image/png",
      "sizes": "84x84"
    },
    {
      "src": "/style/icons/default_126.png",
      "type": "image/png",
      "sizes": "126x126"
    },
    {
      "src": "/style/icons/default_142.png",
      "type": "image/png",
      "sizes": "142x142"
    },
    {
      "src": "/style/icons/default_189.png",
      "type": "image/png",
      "sizes": "189x189"
    },
    {
      "src": "/style/icons/default_284.png",
      "type": "image/png",
      "sizes": "284x284"
    }
  ],
  "b2g_features": {
    "core": true,
    "developer": {
      "name": "dhylands",
      "url": "https://github.com/dhylands/ds-test"
    },
    "permissions": {
      "systemXHR": {},
      "device-storage:apps": {
        "access": "readwrite"
      },
      "device-storage:sdcard": {
        "access": "readwrite"
      },
      "device-storage:music": {
        "access": "readwrite"
      },
      "device-storage:pictures": {
        "access": "readwrite"
      },
      "device-storage:videos": {
        "access": "readwrite"
      },
      "settings": {
        "access": "readonly"
      },
      "webapps-manage": {}
    },
    "activities": {
      "share": {
        "filters": {
          "type": "image/*"
        },
        "href": "/index.html",
        "returnValue": true,
        "disposition": "window"
      }
    }
  }
}
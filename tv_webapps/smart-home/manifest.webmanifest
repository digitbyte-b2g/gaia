{
  "version": "1.1",
  "name": "Home",
  "short_name": "smart-home",
  "description": "Smart Screen Home App",
  "orientation": "landscape",
  "start_url": "/index.html",
  "icons": [
    {
      "src": "/style/icons/Blank.png",
      "type": "image/png",
      "sizes": "128x128"
    }
  ],
  "b2g_features": {
    "core": true,
    "role": "homescreen",
    "developer": {
      "name": "The Gaia Team",
      "url": "https://github.com/mozilla-b2g/gaia"
    },
    "permissions": {
      "webapps-manage": {},
      "open-remote-window": {},
      "systemXHR": {},
      "moz-extremely-unstable-and-will-change-webcomponents": {}
    },
    "activities": {
      "pin": {
        "filters": {
          "manifestURL": {
            "required": true
          }
        }
      },
      "unpin": {
        "filters": {
          "manifestURL": {
            "required": true
          }
        }
      }
    },
    "connections": {
      "appdeck-channel": {
        "description": "communications for app-deck to add/remove application cards",
        "rules": {}
      }
    },
    "datastores-owned": {
      "home_cards": {
        "access": "readwrite",
        "description": "Stores all type of cards/decks/apps"
      }
    }
  }
}